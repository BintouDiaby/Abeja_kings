<!DOCTYPE html>
{% load static %}
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abeja Kings - Connexion</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="{% static 'css/login.css' %}?v=1.2">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <i class="fas fa-crown"></i>
                    <h1>Abeja Kings</h1>
                </div>
                <p class="login-subtitle">Plateforme de Gestion de Chantiers</p>
            </div>
            
            <form id="login-form" class="login-form">
                <div class="form-group">
                    <label for="login-email">Email</label>
                    <input type="email" id="login-email" placeholder="votre@email.com" required>
                </div>
                
                <div class="form-group">
                    <label for="login-password">Mot de passe</label>
                    <input type="password" id="login-password" placeholder="Votre mot de passe" required>
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-sign-in-alt"></i> Se connecter
                </button>
            </form>
            
            <div class="login-info">
                <h4>Comptes de test :</h4>
                <p><strong>Direction:</strong> direction@abeja.kings</p>
                <p><strong>Chef de chantier:</strong> chef@abeja.kings</p>
                <p><strong>Ouvrier:</strong> ouvrier@abeja.kings</p>
                <p><em>Mot de passe:任意 (任意)</em></p>
            </div>
            
            <div class="login-footer">
                <p>Plateforme sécurisée - Abeja Kings © 2024</p>
            </div>
        </div>
    </div>

n    <script>
        document.getElementById('login-form').addEventListener('submit', function(e) {
            e.preventDefault();

            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;

            if (email && password) {
                // Créer un formulaire pour poster vers Django
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/accounts/login/';

                // Ajouter les champs requis par Django
                const usernameField = document.createElement('input');
                usernameField.type = 'hidden';
                usernameField.name = 'username';
                usernameField.value = email; // Utiliser l'email comme username

                const passwordField = document.createElement('input');
                passwordField.type = 'hidden';
                passwordField.name = 'password';
                passwordField.value = password;

                const csrfField = document.createElement('input');
                csrfField.type = 'hidden';
                csrfField.name = 'csrfmiddlewaretoken';
                csrfField.value = getCsrfToken();

                const nextField = document.createElement('input');
                nextField.type = 'hidden';
                nextField.name = 'next';
                nextField.value = '/'; // Rediriger vers la page principale après connexion

                form.appendChild(usernameField);
                form.appendChild(passwordField);
                form.appendChild(csrfField);
                form.appendChild(nextField);

                document.body.appendChild(form);
                form.submit();
            } else {
                alert('Veuillez saisir votre email et mot de passe');
            }
        });

        // Fonction pour obtenir le token CSRF
        function getCsrfToken() {
            const cookieValue = document.cookie
                .split('; ')
                .find(row => row.startsWith('csrftoken='))
                ?.split('=')[1];
            return cookieValue || '';
        }

        // Fonction pour obtenir le token CSRF depuis l'API
        async function getCsrfTokenFromAPI() {
            try {
                const response = await fetch('/api/set-csrf/');
                const data = await response.json();
                return data.csrftoken || '';
            } catch (e) {
                console.warn('Impossible d\'obtenir le token CSRF:', e);
                return '';
            }
        }

        // Initialiser le token CSRF au chargement
        document.addEventListener('DOMContentLoaded', async function() {
            const token = await getCsrfTokenFromAPI();
            if (token) {
                // Créer un cookie CSRF si nécessaire
                document.cookie = `csrftoken=${token}; path=/`;
            }
        });
    </script>
</body>
</html>
