{% extends 'core/base.html' %}
{% block title %}Gestion du Personnel{% endblock %}
{% block content %}
<div class="content-area">
    <div class="content-section">
        <div class="section-header">
            <h3>
                <i class="fas fa-users"></i>
                Tout le Personnel
            </h3>
            <div class="section-actions">
                <div class="search-filters">
                    <input type="text" id="personnel-search" placeholder="Rechercher par nom, rôle..." class="search-input">
                    <select id="personnel-statut-filter" class="filter-select">
                        <option value="">Tous les statuts</option>
                        <option value="actif">Actif</option>
                        <option value="inactif">Inactif</option>
                    </select>
                    <select id="personnel-role-filter" class="filter-select">
                        <option value="">Tous les rôles</option>
                        <option value="ouvrier">Ouvrier</option>
                        <option value="chef">Chef de chantier</option>
                        <option value="technicien">Technicien</option>
                    </select>
                </div>
                <a href="{% url 'core:personnel_create' %}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouveau Personnel
                </a>
                <a href="{% url 'core:dashboard' %}" class="btn btn-outline">
                    <i class="fas fa-home"></i> Retour à l'accueil
                </a>
            </div>
        </div>

